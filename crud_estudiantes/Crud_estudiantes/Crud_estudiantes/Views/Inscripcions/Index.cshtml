@model IEnumerable<Crud_estudiantes.Models.Inscripcion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDEstudiante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estudiantes.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDInscripcion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDInscripcion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDInscripcion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
